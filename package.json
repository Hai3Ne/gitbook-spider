{
  "name": "pdf-converter-app",
  "version": "1.0.0",
  "description": "Web to PDF Converter Application",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "build:electron": "electron-builder",
    "build:all": "npm run build && npm run build:electron",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist"
  },
  "build": {
    "appId": "com.pdfconverter.app",
    "productName": "PDF Converter",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "src/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "playwright": "^1.50.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "@vitejs/plugin-react": "^4.0.0",
    "tailwindcss": "^3.3.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "rimraf": "^5.0.5"
  }
}